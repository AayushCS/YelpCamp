<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<a href="/campgrounds/new"> Add campground </a>

<% for(let campground of campgrounds) { %> <% let i = Math.floor(Math.random() *
campground.images.length); %>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4 mb-1">
      <% if(campground.images[i]) {%>
      <img
        class="img-fluid"
        style="width: 100%; height: 250px; object-fit: cover"
        src="<%= campground.images[i].url %>"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
        <p class="card-text">
          <small class="text-black-50"><%= campground.location %></small>
        </p>
        <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary"
          >View <%= campground.title %></a
        >
      </div>
    </div>
  </div>
</div>
<% }%>
